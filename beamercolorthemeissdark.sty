\definecolor{foreground}{HTML}{EEEEEE}

\definecolor{background}{HTML}{000000}
\definecolor{shadecolor}{HTML}{121212}

\definecolor{issdark-blue}{HTML}{00BCD4}
\definecolor{issdark-orange}{HTML}{FF9B0F}
\definecolor{issdark-red}{HTML}{FF005F}
\definecolor{issdark-green}{HTML}{5FD75F}
\definecolor{issdark-magenta}{HTML}{D75FD7}

\setbeamercolor*{normal text}{fg=foreground}

\setbeamercolor*{background canvas}{bg=background}

\setbeamercolor*{title}{fg=foreground}
\setbeamerfont{title}{size=\Huge}

\setbeamerfont{subtitle}{size=\large}

\setbeamercolor{frametitle-left}{fg=issdark-blue}
\setbeamercolor{frametitle}{fg=foreground}
\setbeamerfont{frametitle}{size=\Large}
\setbeamerfont{framesubtitle}{size=\small}

\setbeamercolor*{itemize item}{fg=foreground}
\setbeamercolor*{itemize subitem}{fg=foreground}

\setbeamercolor*{enumerate item}{fg=foreground}
\setbeamercolor*{enumerate subitem}{fg=foreground}

\setbeamercolor*{page number in head/foot}{fg=foreground}

\setbeamercolor{bibliography item}{fg=issdark-blue}
\setbeamercolor*{bibliography entry title}{fg=foreground}
\setbeamercolor{bibliography entry author}{fg=foreground}
\setbeamercolor{bibliography entry note}{fg=foreground}
\setbeamercolor{bibliography entry location}{fg=foreground}

\setbeamercolor{alerted text}{fg=issdark-orange}

\setbeamercolor{block title}{bg=background, fg=issdark-blue}
\setbeamercolor{block body}{bg=background, fg=foreground}
\setbeamercolor{block title alerted}{bg=shadecolor,fg=issdark-red}
\setbeamercolor{block body alerted}{bg=shadecolor, fg=foreground}
\setbeamercolor{block title example}{bg=shadecolor,fg=issdark-green}
\setbeamercolor{block body example}{bg=shadecolor, fg=foreground}

\setbeamerfont{block title}{series=\bfseries}
\setbeamerfont{block title alerted}{series=\bfseries}
\setbeamerfont{block title example}{series=\bfseries}

\hypersetup{
    breaklinks=true,
    colorlinks=true,
    linkcolor=issdark-blue,
    citecolor=foreground,
    filecolor=foreground,
    urlcolor=issdark-blue,
    anchorcolor=foreground,
    menucolor=red,
    plainpages=false
}
